<?xml version="1.0" encoding="utf-8"?>
<com.spd.window.FilletFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    custom:fillet_radius="20"
    custom:blank_bg_color_n="#ff474747"
    custom:fillet_postion="8"
    custom:bn_touch="false"
    custom:fillet_side_width="0"
    android:alpha="0"
    android:translationY="180px"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginTop="10px"
        android:layout_gravity="left|top">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/window_icon_phone"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/id_window_title_text"
            android:layout_marginLeft="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="BlueTooth Device"
            android:textSize="24px"
            android:textColor="#ffffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        >
        <com.spd.window.MyCircleButton
            android:id="@+id/id_bn_dial"
            custom:fillet_side_width="0"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            custom:fillet_radius="48"
            custom:fillet_width="96"
            custom:fillet_height="96"
            custom:touch_circle_radius="64"
            android:layout_gravity="center"
            custom:circle_in_blank="false"
            custom:blank_bg_color_n="#80000000"
            custom:blank_bg_color_p="#e0ffffff"
            custom:icon_drawable="@drawable/window_icon_dial"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:layout_marginTop="70px"
                android:singleLine="true"

                android:text="Dial"/>
        </com.spd.window.MyCircleButton>
        <com.spd.window.MyCircleButton
            android:id="@+id/id_bn_contact"
            custom:fillet_side_width="0"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            custom:fillet_radius="48"
            custom:fillet_width="96"
            custom:fillet_height="96"
            custom:touch_circle_radius="64"
            android:layout_gravity="center"
            custom:circle_in_blank="false"
            custom:blank_bg_color_n="#80000000"
            custom:blank_bg_color_p="#e0ffffff"
            custom:icon_drawable="@drawable/window_icon_contact"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:layout_marginTop="70px"
                android:singleLine="true"
                android:text="Contact"/>
        </com.spd.window.MyCircleButton>
        <com.spd.window.MyCircleButton
            android:id="@+id/id_bn_bt_music"
            custom:fillet_side_width="0"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            custom:fillet_radius="48"
            custom:fillet_width="96"
            custom:fillet_height="96"
            custom:touch_circle_radius="64"
            android:layout_gravity="center"
            custom:circle_in_blank="false"
            custom:blank_bg_color_n="#80000000"
            custom:blank_bg_color_p="#e0ffffff"
            custom:icon_drawable="@drawable/window_icon_music"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:layout_marginTop="70px"
                android:singleLine="true"
                android:text="Music"/>
        </com.spd.window.MyCircleButton>
    </LinearLayout>
</com.spd.window.FilletFrameLayout>
