<?xml version="1.0" encoding="utf-8"?>
<com.spd.window.FilletLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="520px"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    custom:fillet_radius="20"
    custom:blank_bg_color_n="#ff474747"
    custom:fillet_postion="0"
    custom:fillet_side_width="0"
    android:alpha="0"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        >
        <com.spd.MyLauncher.MyNormalButton
            android:id="@+id/id_bn_extends"
            android:layout_width="80px"
            android:layout_height="match_parent"
            custom:touch_circle_radius="22"
            custom:fillet_postion="-1"
            custom:icon_drawable="@drawable/extends_arrow_down"
            android:layout_gravity="left"
            />
        <com.spd.MyLauncher.MyCheckBoxView
            android:id="@+id/id_check_box_mute"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/SubText"
            android:text="@string/string_mute"
            android:layout_gravity="right|center"
            android:layout_marginRight="100px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MainText"
            android:text="@string/string_volume"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/id_volume_item_media"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        >
        <ImageView
            android:layout_width="50px"
            android:layout_height="80px"
            android:src="@drawable/volume_icon_media"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            />
        <com.spd.MyLauncher.MyProgressBarView
            android:id="@+id/id_progress_media"
            android:layout_width="0px"
            android:layout_height="80px"
            android:layout_weight="1"
            custom:fillet_height="4"/>
        <TextView
            android:id="@+id/id_text_view_media"
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:theme="@style/SubText"
            android:textColor="#ffffffff"
            android:text="0"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_volume_item_phone"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        >
        <ImageView
            android:layout_width="50px"
            android:layout_height="80px"
            android:src="@drawable/volume_icon_phone"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            />
        <com.spd.MyLauncher.MyProgressBarView
            android:id="@+id/id_progress_phone"
            android:layout_width="0px"
            android:layout_height="80px"
            android:layout_weight="1"
            custom:fillet_height="4"/>
        <TextView
            android:id="@+id/id_text_view_phone"
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:theme="@style/SubText"
            android:textColor="#ffffffff"
            android:text="0"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_volume_item_navi"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        >
        <ImageView
            android:layout_width="50px"
            android:layout_height="80px"
            android:src="@drawable/volume_icon_navi"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            />
        <com.spd.MyLauncher.MyProgressBarView
            android:id="@+id/id_progress_navi"
            android:layout_width="0px"
            android:layout_height="80px"
            android:layout_weight="1"
            custom:fillet_height="4"/>
        <TextView
            android:id="@+id/id_text_view_navi"
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:theme="@style/SubText"
            android:textColor="#ffffffff"
            android:text="0"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"/>
</com.spd.window.FilletLinearLayout>
