<?xml version="1.0" encoding="utf-8"?>
<com.spd.custom.view.AppGridItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/app_icon_part_navi" />

    <TextView
        android:id="@+id/id_app_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/app_icon_text_margin"
        android:singleLine="true"
        android:text="App Name"
        android:textAlignment="center"
        android:textColor="#ffffffff"
        android:textSize="22px" />
</com.spd.custom.view.AppGridItemView>